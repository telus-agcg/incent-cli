#! /usr/bin/env bash

config_path="${HOME}/.config/incent"

create_secrets() {
  echo -e "\n\033[1mAddinng secrets.env\033[0m"

  mkdir -p "${config_path}"

  echo "AUTH0_CLIENT_ID_STAGE=get from secret server
  AUTH0_CLIENT_SECRET_STAGE=get from secret server
  AUTH0_CLIENT_ID_PROD=get from secret server
  AUTH0_CLIENT_SECRET_PROD=get from secret server" > "${config_path}/secrets.env"
}

install_incent() {
  echo -e "\n\033[1mInstalling incent CLI\033[0m"
  mkdir -p $HOME/bin

  echo "$(curl -s https://raw.githubusercontent.com/technekes/incent-cli/master/bin/incent)" > ~/bin/incent

  chmod +x ~/bin/incent
}

config_details() {
  echo -e "\n\033[1mConfig details:\033[0m"
  $HOME/bin/incent config init
  echo
  $HOME/bin/incent config list
}

create_secrets
install_incent
config_details

echo -e "\033[1mIncent CLI installed, Try 'incent --help'!\033[0m"